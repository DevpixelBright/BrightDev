<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Future_Date</fullName>
    <active>true</active>
    <description>This field will accept only future dates</description>
    <errorConditionFormula>AND(Future_Termination_Date__c &lt;=  TODAY(),  ISCHANGED(Future_Termination_Date__c ) )</errorConditionFormula>
    <errorDisplayField>Future_Termination_Date__c</errorDisplayField>
    <errorMessage>Please enter a future date</errorMessage>
</ValidationRule>
