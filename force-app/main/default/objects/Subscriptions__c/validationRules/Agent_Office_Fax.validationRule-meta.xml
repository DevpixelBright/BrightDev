<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Agent_Office_Fax</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(Fax__c, &quot;^$|\\D*1?(\\D*\\d{3}){3}\\d\\D*&quot;))                                         
&amp;&amp; NOT( $Setup.Bypass_Validation_rules__c.Disable_Validation_Rules__c )</errorConditionFormula>
    <errorMessage>Please make sure Agent Office Fax Number is properly formatted. - (xxx) xxx-xxxx</errorMessage>
</ValidationRule>
