<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mobile_Phone_cannot_be_all_zeros</fullName>
    <active>true</active>
    <errorConditionFormula>OR(REGEX(Mobile_Phone__c, &quot;\\D+\\d*|\\d+\\D+&quot;),REGEX(Mobile_Phone__c, &quot;^[^A-Za-z1-9_]*0$&quot;))</errorConditionFormula>
    <errorDisplayField>Mobile_Phone__c</errorDisplayField>
    <errorMessage>Invalid Phone number</errorMessage>
</ValidationRule>
