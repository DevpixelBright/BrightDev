        <description>In SMS Compliance Fine Add automatically $5000 fine when Violation type is Off MLS Listings</description>
        <field>Fine_Amount__c</field>
        <name>Add5KFineForViolationIsOffMLSListings</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>AddFineOfFiveThousandDollars</fullName>
        <field>Fine_Amount__c</field>
        <formula>5000</formula>
        <name>AddFineOfFiveThousandDollars</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Ready_to_Bill</fullName>
        <description>Ready_to_Bill</description>
        <field>Status__c</field>
        <literalValue>Ready to Bill</literalValue>
        <name>Ready_to_Bill</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Add5KFineForViolationIsOffMLSListings</fullName>
        <actions>
            <name>AddFineOfFiveThousandDollars</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Compliance_Fine__c.Violation__c</field>
            <operation>equals</operation>
            <value>Off MLS Listings</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Compliance_Bill_Date</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Compliance_Fine__c.Status__c</field>
            <operation>equals</operation>
            <value>Pending</value>
        </criteriaItems>
        <description>Compliance_Bill_Date</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Ready_to_Bill</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>Compliance_Fine__c.Bill_Date__c</offsetFromField>
            <timeLength>4</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
