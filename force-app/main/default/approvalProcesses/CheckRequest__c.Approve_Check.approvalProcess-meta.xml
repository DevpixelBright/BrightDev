    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>gail.kern@mris.net</submitter>
        <type>user</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>norma.velasquez@mris.net</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Amount__c</field>
        <field>GL__c</field>
        <field>Payment_is_for__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Approved_By_Manager</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Approved_by_Manager_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Fianance_Please_approve_Check_Request</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Finance_approve_check_request</name>
                <type>Task</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>elena.medved@mris.net</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>CheckRequest__c.Ready_for_Approval__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>Step 1</label>
        <name>Step_1</name>
        <rejectionActions>
            <action>
                <name>Manager_Disapprove</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Manager_Disapprove_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Manager_rejects_Check_Request</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>API_Names/Check_Approval_for_Data_Management</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>CheckRequest__c.Ready_for_Approval__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approve_Check_Request</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Please_approve_check</name>
            <type>Task</type>
        </action>
        <action>
            <name>Submitted_for_Manager_Approval_Date</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Approve Check</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
